<Window x:Class="VaportFrontEnd.InfoBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VaportFrontEnd"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Message" Height="130" Width="350">
    <Grid Background="#FF1A1C25">
        <TextBlock x:Name="Label" HorizontalAlignment="Center" Margin="0,26,0,0" Text="TextBlock" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Center" Foreground="#FFECFEFF" Width="330" Height="31"/>
        <Button x:Name="okButton" Content="OK" HorizontalAlignment="Center" Margin="0,62,0,0" VerticalAlignment="Top" Width="82" Background="#FF867DE9" FontWeight="Bold" Click="okButton_Click"/>
    </Grid>
</Window>
